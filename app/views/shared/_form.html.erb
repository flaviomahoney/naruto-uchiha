<div class="container">
    <%= simple_form_for(@product) do |f| %>

        <div class="form-inputs">
            <%= f.input :name %>
            <%= f.input :description%>
            <%= f.input :size %>
            <%= f.input :price %>
        </div>

        <div class="form-actions">
            <%= f.button :submit , class: "btn btn-primary"%>
        </div>
    <% end %>
</div>